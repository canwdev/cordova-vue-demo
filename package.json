{
  "name": "io.cordova.hellocordova",
  "displayName": "HelloCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env PORT=8080 concurrently \"yarn --cwd frontend run serve\" \"wait-on http://localhost:8080 && cordova run android\"",
    "android": "cordova run android",
    "licence": "yes | sdkmanager --licenses"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@appcominteractive/cordova-plugin-hot-reload": "^0.2.3",
    "cordova-android": "^9.0.0",
    "cordova-plugin-whitelist": "^1.3.4"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "@appcominteractive/cordova-plugin-hot-reload": {}
    },
    "platforms": [
      "android"
    ]
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "wait-on": "^5.2.1"
  }
}